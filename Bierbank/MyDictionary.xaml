<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Bierbank">
    
    <Style TargetType="Button" x:Key="ToolBarButton">
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Margin" Value="8"/> 
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="BorderBrush" Value="{DynamicResource LetterKleur}"/>
        <Setter Property="Foreground" Value="{DynamicResource LetterKleur}"/>
    </Style>

    <SolidColorBrush x:Key="ToolBarKleur" Color="CornflowerBlue" />
    <SolidColorBrush x:Key="AchtergrondKleur" Color="Black" />
    <SolidColorBrush x:Key="LetterKleur" Color="White" />
    <SolidColorBrush x:Key="Transparant" Color="White" Opacity="0.5" />
    <SolidColorBrush x:Key="RandKleur" Color="Black" />

</ResourceDictionary>